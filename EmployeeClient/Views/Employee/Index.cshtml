@model IEnumerable<Employee>
@{ Layout = "_Layout"; ViewBag.Title = "All Employees";}

<h2>Employees</h2>
<a asp-action="AddEmployee" class="btn btn-sm btn-primary">Add Employee</a>
<a asp-action="GetEmployee" class="btn btn-sm btn-secondary">Get Employee</a>

<table class="table table-sm table-striped table-bordered m-2">
    <thead>
        <tr>
            <th>EmployeeId</th>
            <th>EmployeeName</th>
            <th>EmployeeSurname</th>
            <th>EmployeeEmail</th>
            <th>Update</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.EmployeeId</td>
                <td>@employee.EmployeeName</td>
                <td>@employee.EmployeeSurname</td>
                <td>@employee.EmployeeEmail</td>
                
                <td>
                    <a asp-action="UpdateEmployee" asp-route-id="@employee.EmployeeId">
                        <img src="/icon/edit.png" />
                    </a>
                </td>
                <td>
                    <form asp-action="DeleteEmployee" method="post">
                        <input type="hidden" value="@employee.EmployeeId" name="EmployeeId" />
                        <input type="image" src="/icon/close.png" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
