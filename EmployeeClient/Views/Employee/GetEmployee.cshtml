@model Employee
@{ Layout = "_Layout"; ViewBag.Title = "Get Employee by Id";}

<h2>Get Employee by Id <a asp-action="Index" class="btn btn-sm btn-primary">Back</a></h2>
<form method="post">
    <div class="form-group">
        <label for="id">EmployeeId:</label>
        <input class="form-control" name="id" />
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Get Employee</button>
    </div>
</form>

@if (Model != null && Model.EmployeeId != 0)
{
    <h2>Employee</h2>
    <table class="table table-sm table-striped table-bordered m-2">
        <thead>
            <tr>
                <th>EmployeeId</th>
                <th>EmployeeName</th>
                <th>EmployeeSurname</th>
                <th>EmployeeEmail</th>
            
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.EmployeeId</td>
                <td>@Model.EmployeeName</td>
                <td>@Model.EmployeeSurname</td>
                <td>@Model.EmployeeEmail</td>
               
            </tr>
        </tbody>
    </table>
}
else if (Model != null && Model.EmployeeId == 0)
{
    <div class="text-center">
        <h1>The employee with the searched Id does not exist!!</h1>
    </div>
}